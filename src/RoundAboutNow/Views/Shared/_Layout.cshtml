<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-default">
        <!-- Logo -->
        <a class="navbar-brand" href="#"><img id="logoimage" src="~/Images/roundaboutnow_logo_large.png" /></a>

        <!-- Collapse toggle -->
        <div class="navbar-header">
            <a class="navbar-toggle hidden-lg-up" data-toggle="collapse" data-target="#exCollapsingNavbar"><i class="fa fa-bars" aria-hidden="true"></i></a>
        </div>

        <!-- Will be collapsed -->
        <div class="collapse navbar-collapse" id="exCollapsingNavbar">
            <ul class="nav navbar-nav navbar-left">
                <!-- Menu -->
                <li class="nav-item dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Meny</a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                    </ul>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item">
                    <a href="#" class="nav-link">Om</a>
                </li>
            </ul>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="footer">
        <center>
            <p>
                <i class="fa fa-copyright" aria-hidden="true"></i>RoundAboutNow 2016
            </p>
        </center>
    </footer>

    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Images/favicon.png")" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Css/Layout.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="~/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    @{ RenderSection("scripts", required: false);}
</body>
</html>
